<h1>ユーザー情報</h1>
<table>
    <thead>
        <tr>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>退会</th>
        </tr>
    </thead>
    <div class="pager">
        <%= paginate @users %>
    </div>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= link_to "#{user.name}", admins_user_path(user) %></td>
            <td><%= user.email%></td>
            <td>
                <% if user.deleted_at? %>
                    退会済み
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<div class="pager">
    <%= paginate @users %>
</div>
