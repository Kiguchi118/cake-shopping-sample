<h2>受注一覧</h2>

<% if @orders.any? %>
    <table>
        <thead>
            <tr>
                <th>お客様</th>
                <th>注文日時</th>
                <th>金額</th>
                <th>ステータス</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @orders.each do |order| %>
                <tr>
                    <td><%= order.name %></td>
                    <td><%= l order.created_at  %></td>
                    <td><%= order.total_payment %></td>
                    <td><%= order.order_status_i18n %></td>
                    <td><%= link_to "詳細", admins_order_path(order) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <div class="pager">
        <%= paginate @orders %>
    </div>
<% else %>
    <h2>まだ受注されていません</h2>
<% end %>