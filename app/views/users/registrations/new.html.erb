<h2>会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "ユーザー名" %><br />
    <%= f.text_field :name, autofocus: true, class: "name" %>
  </div>

  <div class="field">
    <%= f.label :last_name, "姓" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :first_name, "名" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, "姓（カナ）" %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, "名（カナ）" %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postcode, "郵便番号" %><br />
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
    <input type="button" id="btn" name="btn" value="住所を検索">
  </div>

  <div class="field">
    <%= f.label :prefecture_name, "都道府県" %><br />
  　<%= f.collection_select :prefecture_name, JpPrefecture::Prefecture.all, :name, :name, include_blank: '-- 選択 --' %>
  </div> 

  <div class="field">
    <%= f.label :address_city, "市町村" %><br />
    <%= f.text_field :address_city, autofocus: true, autocomplete: "address_city" %>   
  </div>

  <div class="field">
    <%= f.label :address_street, "番地" %><br />
    <%= f.text_field :address_street, autofocus: true, autocomplete: "address_street" %>   
  </div>

  <div class="field">
    <%= f.label :address_building, "建物名" %><br />
    <%= f.text_field :address_building, autofocus: true, autocomplete: "address_building" %>   
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号" %><br />
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
