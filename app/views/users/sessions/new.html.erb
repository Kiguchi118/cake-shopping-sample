<h2>ユーザーログイン</h2>

<div class="form_container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="box_account">
      <div class="field">
        <%= f.label :email, class: "form_label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
                      placeholder: "example@example.com", class: "form_content" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "form_label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form_content" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field_checkbox field">
          <%= f.check_box :remember_me, class: "form_checkbox" %>
          <%= f.label :remember_me, class: "checkbox-label" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    </div>
    
  <% end %>
</div>

<%= render "users/shared/links" %>
