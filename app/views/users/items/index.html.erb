<h1>商品一覧</h1>
<table>
    <thead>
        <tr>
            <th>商品イメージ</th>
            <th>商品名</th>
            <th>税抜価格(円)</th>
            <th>ジャンル</th>
            <th>販売ステータス</th>
        </tr> 
    </thead>
    <div class="pager">
        <%= paginate @items %>
    </div>
    <tbody>
        <% @items.each do |item| %>
        <tr>
            <td><%= image_tag item.picture.thumb.url if item.picture? %></td>
            <td><%= link_to "#{item.name}", item %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.sales_status ? "販売中" : "売切れ" %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<div class="pager">
    <%= paginate @items %>
</div>
