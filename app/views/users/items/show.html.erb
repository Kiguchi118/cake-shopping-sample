<h1><%= @item.name %></h1>

<div class="col-xs-7">

</div>

<div class="col-xs-5">
    <div class="item-details">
        <span class="purple-btn">
            <%= @item.sales_status ? "販売中" : "売切れ"%>
        </span>
        <p>価格(税抜): ￥<%= @item.price %></p>
        <p>ジャンル: <%= @item.genre.name %></p>
        <div class="sentence item-sentence">
            <div class="box-title">説明文</div>
            <p><%= @item.introduction %></p>
        </div>
    </div>
    <% if @item.sales_status? %>
        <div class="cart-item">
            <h3>注文</h3>
            <%= form_with(model: @cart_item, local: true) do |f| %>
                <div class="field">
                    <span>個数：</span>
                    <%= f.number_field :amount, min: 1, placeholder: "例）2" %>
                </div>
                <%= f.hidden_field :user_id, value: current_user.id %>
                <%= f.hidden_field :item_id, value: @item.id %>
                <%= f.submit "カートに入れる" %>
            <% end %>
        </div>
    <% end %>
</div>

<div>
    <%= link_to  "戻る", items_path, class: "button" %>
</div>
